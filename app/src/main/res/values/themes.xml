<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ImageView Style -->
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.Daylogandroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- title bar 제거 -->
        <item name="windowNoTitle">true</item>

        <!-- custom font-family 적용 -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="appBarLayoutStyle">@style/AppbarStyle</item>
    </style>

    <style name="Theme.Daylogandroid.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppbarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nanumsquare_aceb</item>
    </style>
</resources>