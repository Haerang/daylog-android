<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:text="로그인"
        android:textColor="#1d1d1d"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="100sp"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="만나서 반가워요 :)"
        android:textColor="@color/darkgray_70"
        android:textSize="20sp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_input"
            android:layout_width="320sp"
            android:layout_height="62sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/input_bg"
            android:hint="이메일 주소를 입력해주세요"
            android:imeOptions="actionDone"
            android:paddingLeft="27sp"
            android:singleLine="true"
            android:text="tester@kbfg.com"
            android:textColorHint="@color/gray_50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_debug"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:paddingLeft="5sp"
            android:textColor="#ff0000"
            tools:text="debug 영역입니다" />

        <EditText
            android:id="@+id/pw_input"
            android:layout_width="320sp"
            android:layout_height="62sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/input_bg"
            android:hint="비밀번호를 입력해주세요"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="27sp"
            android:singleLine="true"
            android:text="tester12345"
            android:textColorHint="@color/gray_50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pw_debug"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70sp"
            android:paddingLeft="5dp"
            android:textColor="#ff0000"
            tools:text="debug 영역입니다" />

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="320sp"
            android:layout_height="45sp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>