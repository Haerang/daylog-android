<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="48sp"
                android:height="48sp" />
            <gradient
                android:endColor="@color/gradient_blue"
                android:startColor="@color/gradient_green"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="1.5sp"
        android:left="1.5sp"
        android:right="1.5sp"
        android:top="1.5sp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>